execute pathogen#infect()

inoremap jj <ESC>

let mapleader = "\<Space>"

filetype plugin indent on

"Colors/Themes
syntax on 
set background=dark
colorscheme solarized 
let g:airline_theme='solarized'
set t_Co=256

set encoding=utf-8
set number
set relativenumber

"Tabs/Indentations
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set textwidth=80

"Airline Settings
set laststatus=2
